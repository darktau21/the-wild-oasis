{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@app": ["./app"],
      "@app/*": ["./app/*"],

      "@pages": ["./pages"],
      "@pages/*": ["./pages/*"],

      "@widgets": ["./widgets"],
      "@widgets/*": ["./widgets/*"],

      "@features": ["./features"],
      "@features/*": ["./features/*"],

      "@entities": ["./entities"],
      "@entities/*": ["./entities/*"],

      "@shared": ["./shared"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["src", "types"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
